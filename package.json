{
  "name": "tandem",
  "private": true,
  "version": "1.8.1",
  "description": "Collaborative markdown editor with track changes",
  "author": "IrisGo",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "server": "tsx server/index.ts",
    "build": "tsc -b && vite build",
    "build:frontend": "tsc -b && vite build",
    "start": "NODE_ENV=production tsx server/index.ts",
    "tunnel": "npm run build && cloudflared tunnel --url http://localhost:3000",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build:frontend && electron-builder",
    "pack": "npm run build:frontend && electron-builder --dir",
    "dist": "npm run build:frontend && electron-builder",
    "dist:mac": "npm run build:frontend && electron-builder --mac",
    "dist:win": "npm run build:frontend && electron-builder --win",
    "dist:linux": "npm run build:frontend && electron-builder --linux"
  },
  "build": {
    "appId": "com.irisgo.tandem",
    "productName": "Tandem",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@hocuspocus/provider": "^3.4.0",
    "@hocuspocus/server": "^3.4.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-code-block-lowlight": "^2.27.1",
    "@tiptap/extension-collaboration": "^2.27.1",
    "@tiptap/extension-collaboration-cursor": "^2.26.2",
    "@tiptap/extension-image": "^2.27.1",
    "@tiptap/extension-placeholder": "^2.27.1",
    "@tiptap/extension-table": "^2.27.1",
    "@tiptap/extension-table-cell": "^2.27.1",
    "@tiptap/extension-table-header": "^2.27.1",
    "@tiptap/extension-table-row": "^2.27.1",
    "@tiptap/pm": "^2.27.1",
    "@tiptap/react": "^2.27.1",
    "@tiptap/starter-kit": "^2.27.1",
    "@tiptap/suggestion": "^2.27.1",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "express": "^5.2.1",
    "html-to-pdfmake": "^2.5.32",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.556.0",
    "marked": "^17.0.1",
    "multer": "^2.0.2",
    "pdfmake": "^0.2.20",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tippy.js": "^6.3.7",
    "turndown": "^7.2.2",
    "ws": "^8.18.0",
    "y-prosemirror": "^1.3.7",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/diff": "^8.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/turndown": "^5.0.6",
    "@types/ws": "^8.18.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
